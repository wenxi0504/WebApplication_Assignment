<%- include ('partials/header.ejs') %>

<%- include ('partials/main_nav.ejs') %>


<h1>Welcome to contacts_list</h1>

<div class="row">
    <div class="col">

        <a href="/contacts_list/edit" id="addButton" class="btn btn-primary mb-1"><i class="fas fa-plus-square"></i> Add Contact Item</a>
        <table class="table table-striped table-bordered table-hover">
            <thead class="table-dark">
              <tr>
                <th scope="col">#</th>
                <th scope="col">Contact Name</th>
                <th scope="col">Contact Number</th>
                <th scope="col">Email</th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>

             <!-- Repeatable Row Template -->   

             <% for(let count = 0; count < contact.length; count++) { %>
              
                <tr>
                    <th scope="row"><%= count + 1 %></th>
                    <td><%= contact[count].ContactName %></td>
                    <td><%= contact[count].ContactNumber %></td>
                    <td><%= contact[count].EmailAddress %></td>
                    <td class="text-center"><a href="/contacts_list/edit/<%= contact[count]._id %>" class="btn btn-primary btn-sm edit"><i class="fas fa-user-edit"></i></i> Update</a></td>
                <td class="text-center"><a href="/contacts_list/delete/<%= contact[count]._id %>" class="btn btn-danger btn-sm delete"><i class="fas fa-trash"></i></i> Delete</a></td>
                </tr>
              <% } %>

            </tbody>
          </table>
    </div>
</div>

<%- include ('partials/bottom_nav.ejs') %>  

<%- include ('partials/footer.ejs') %>